@model IEnumerable<JobOffersWebsite.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>مرحبا بك عزيزى الزائر</h3>
    <p class="lead"> مرحبا بك فى فضاء البحث  عن الوظائف بأختلاف أصنافها , ويمكنك نشر وظيفة ان كننت ناشرا , ويمكنك التقدم الى وظيفة ان كنت باحثا عن زظيفة</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>

@foreach (var item in Model)
{
<div class="panel panel-default" style="padding:15px;">
    <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
    <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>

    <div class="row">
        @foreach (var subItem in item.Jobs)
        {

            <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:380px;">
                <img src="~/Uploads/@subItem.JobImage" />
                <h3> @Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                <h3> @Html.DisplayFor(modelItem => subItem.JobContent)</h3>

                @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.Id },new { @class="btn btn-primary" });

            </div>


        }
    </div>
</div>
}

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>


</div>
